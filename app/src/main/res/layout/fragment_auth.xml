<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_github_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="85dp"
                android:layout_marginEnd="85dp"
                android:src="@drawable/ic_github_logo"
                android:contentDescription="@string/github_logo" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/blue_jeans"
                    app:hintTextColor="@color/blue_jeans"
                    app:helperTextTextColor="@color/alabama_crimson"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:hintEnabled="true"
                    app:errorEnabled="true"
                    app:helperText="@string/invalid_token"
                    android:hint="@string/token_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_token"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@color/may_green"
        app:cardCornerRadius="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_sign_in"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:backgroundTint="@color/fruit_salad"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0.025"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:elevation="0dp"
            app:cornerRadius="8dp"
            app:rippleColor="@color/may_green"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>