<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:focusableInTouchMode = "true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_github_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="85dp"
                android:layout_marginEnd="85dp"
                android:src="@drawable/ic_github_logo"
                android:contentDescription="@string/github_logo" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                app:boxStrokeColor="@color/input_token"
                app:hintTextColor="@color/input_token"
                android:hint="@string/token_hint"
                app:errorEnabled="false"
                app:hintTextAppearance="@style/InputTextAppearance"
                app:helperTextTextAppearance="@style/InputTextAppearance"
                android:textColorHint="#80FFFFFF"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_token"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_marginHorizontal="-4dp"
                    android:backgroundTint="@android:color/transparent"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColor="@color/white"
                    android:letterSpacing="0.01"
                    android:inputType="text"
                    android:imeOptions="actionGo" />

                <TextView
                    android:id="@+id/tv_helper_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="top"
                    android:text="@string/invalid_token"
                    android:textSize="12sp"
                    android:textColor="@color/alabama_crimson"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@color/may_green"
        app:cardCornerRadius="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_sign_in"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:backgroundTint="@color/fruit_salad"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0.025"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:elevation="0dp"
            app:cornerRadius="8dp"
            app:rippleColor="@color/may_green"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>